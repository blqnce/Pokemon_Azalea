{
  "initializationAction": [
    "(q.npc.is_in_battle_with(q.player) || !q.npc.is_doing_activity('minecraft:idle', 'cobblemon:battling')) ? q.dialogue.close();",
    "v.has_met = (q.player.data.raihan_defeated >= 1) ? 'defeated' : ((q.player.data.raihan_interacted >= 1) ? 'met' : 'unmet');"
  ],
  "speakers": {
    "npc": {
      "name": {
        "type": "expression",
        "expression": "q.npc.name"
      },
      "face": "q.npc.face(false);"
    },
    "player": {
      "face": "q.player.face();",
      "name": {
        "type": "expression",
        "expression": "q.player.username"
      }
    }
  },
  "pages": [
    {
      "id": "player-chat",
      "speaker": "player",
      "lines": [
        {
          "type": "expression",
          "expression": "'Hello, I\\'m ' + q.player.username + '!'"
        }
      ],
      "input": [
        "q.dialogue.set_page(v.has_met);",
        "q.player.data.raihan_interacted = 1;",
        "q.player.save_data();"
      ]
    },
    {
      "id": "unmet",
      "speaker": "npc",
      "lines": [
        {
          "type": "expression",
          "expression": "'Hello, ' + q.player.username + '! I\\'m the the myth, the legend himself, ' + q.npc.name + '!'"
        }
      ],
      "input": {
        "type": "option",
        "vertical": false,
        "options": [
          {
            "text": {
              "type": "expression",
              "expression": "q.run_script('cobblemon:npc_battle_cooling_down') ? '(On Cooldown)' : 'Challenge';"
            },
            "value": "battle",
            "action": [
              "q.dialogue.set_page('battle')"
            ],
            "isSelectable": "!q.run_script('cobblemon:npc_battle_cooling_down') && c.npc.can_battle;"
          },
          {
            "text": "Debug",
            "value": "Debug",
            "action": [
              "q.dialogue.set_page('debug')"
            ]
          },
          {
            "text": "Cancel",
            "value": "cancel",
            "action": [
              "q.dialogue.set_page('farewell')"
            ]
          }
        ]
      }
    },
    {
      "id": "met",
      "speaker": "npc",
      "lines": [
